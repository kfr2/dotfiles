[user]
  name      = Kevin Richardson
  email     = kevin@magically.us
[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
[core]
  editor      = vim
  excludesfile = ~/.gitignore
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[merge]
  tool        = vimdiff
[credential]
	helper = osxkeychain
